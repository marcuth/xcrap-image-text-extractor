{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "nodenext",
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}